@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-container" style="max-width: 800px; margin: 60px auto; padding: 40px; background: #fff; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.1); font-family: 'Segoe UI', sans-serif;">
    <h2 style="text-align: center; font-size: 2rem; color: #333;">📞 @ViewBag.Title</h2>
    <p style="text-align: center; color: #555; font-size: 1.1rem;">
        We’d love to hear from you! Whether you have feedback, questions, or collaboration ideas, feel free to reach out.
    </p>

    <hr style="margin: 25px 0; border: 0; border-top: 2px solid #eee;" />

    <div style="display: flex; flex-wrap: wrap; justify-content: space-between; gap: 30px; margin-top: 20px;">
        <div style="flex: 1; min-width: 250px;">
            <h4 style="color: #0078d7;">📧 Email</h4>
            <p>
                <a href="mailto:recipebookmvc@gmail.com" style="text-decoration: none; color: #333;">
                    recipebookmvc@gmail.com
                </a>
            </p>

            <h4 style="color: #0078d7;">💻 GitHub</h4>
            <p>
                <a href="https://github.com/RecipeBookMVC" target="_blank" style="text-decoration: none; color: #333;">
                    github.com/RecipeBookMVC
                </a>
            </p>

            <h4 style="color: #0078d7;">📷 Instagram</h4>
            <p>
                <a href="https://www.instagram.com/RecipeBookMVC" target="_blank" style="text-decoration: none; color: #333;">
                    
                </a>
            </p>
        </div>

        <div style="flex: 1; min-width: 250px;">
            <h4 style="color: #0078d7;">🌍 Our Mission</h4>
            <p style="color: #555; text-align: justify;">
                RecipeBookMVC helps food lovers explore, save, and organize delicious recipes from around the world.
                Our mission is to make cooking easier, healthier, and more inspiring — one recipe at a time.
            </p>

            <h4 style="color: #0078d7;">💬 Connect With Us</h4>
            <p style="color: #555;">
                Follow us on social media and stay updated on our latest recipes, updates, and food ideas!
            </p>
        </div>
    </div>
</div>
